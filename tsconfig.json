{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "release",
    "moduleResolution": "Node",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["app/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["app/**/*.vue", "config/*.ts", "lib/*.ts", "server/*.ts", "custom.d.ts"],
  "vueCompilerOptions": {
    "plugins": ["@volar/vue-language-plugin-pug"]
  }
}
